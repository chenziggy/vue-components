{
  "name": "vz-components",
  "version": "0.1.0-beta.11",
  "description": "The Vue3 Ziggy components.",
  "main": "dist/es/index.mjs",
  "type": "module",
  "style": "dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/es/index.mjs",
      "require": "./dist/lib/index.js"
    },
    "./dist/": "./dist/"
  },
  "scripts": {
    "start": "gulp --require @esbuild-kit/cjs-loader -f ./gulpfile.ts",
    "dev": "vite --config vite.config.demo.ts",
    "build:demo": "vue-tsc && vite build --config vite.config.demo.ts",
    "build": "pnpm run -C internal/build start",
    "preview": "vite preview",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/gulp": "^4.0.13",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vz-components/build": "workspace:*",
    "@vz-components/build-constants": "workspace:*",
    "@vz-components/build-utils": "workspace:*",
    "consola": "^3.2.3",
    "esbuild": "^0.19.2",
    "fast-glob": "^3.3.1",
    "gulp": "^4.0.2",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.0.2",
    "unbuild": "^0.7.4",
    "unplugin-vue-macros": "^2.5.1",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  },
  "author": "Ziggy Chen",
  "license": "MIT"
}
